.wrapper

  = render "header"

  .index-main
    .items
      - @aromas.each do |aroma|
        .item
          .item__img
            -# = image_tag aroma.image.url
          .item__name 
            = aroma.name
          .item__btns
            = link_to "編集", edit_aroma_path(aroma.id), class: "edit-btn"
            = link_to "削除", aroma_path(aroma.id), class: "delete-btn", method: :delete
              

  = render "footer"